@model List<DetallePedidoViewModel>
@{
    var pedido = (PedidoDTO)ViewBag.Pedido;
}

<div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Detalles del Pedido #@pedido.IdPedido</h2>
        <a class="btn btn-sm btn-outline-primary" asp-action="MisPedidos" asp-controller="Pedido">
            <i class="bi bi-arrow-left-circle"></i> Volver a Mis Pedidos
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <p><strong>Fecha:</strong> @pedido.FechaPedido.ToString("dd/MM/yyyy")</p>
            <p><strong>Estado:</strong> <span class="badge bg-info text-dark">@pedido.Estado</span></p>
            <p><strong>Total:</strong> <span class="fw-bold text-success">@pedido.Total.ToString("C")</span></p>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Producto</th>
                    <th>Vista previa</th>
                    <th>Precio Unitario</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-start">@item.NombreProducto</td>
                        <td><img src="@item.ImagenProducto" alt="Imagen de @item.NombreProducto" class="img-thumbnail" style="width: 60px;" /></td>
                        <td>$@item.PrecioUnitario.ToString()</td>
                        <td>@item.Cantidad</td>
                        <td class="fw-semibold text-success">$@item.Subtotal.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<partial name="_ValidationScriptsPartial" />